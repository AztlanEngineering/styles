{
  "name": "@aztlan/styles",
  "version": "0.6.0",
  "license": "MPLv2",
  "private": true,
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --parallel",
    "lerna": "lerna",
    "lint:stylelint": "lerna run lint:stylelint",
    "lint:stylelint:fix": "lerna run lint:stylelint:fix",
    "ncu": "lerna exec 'ncu -i' --concurrency 1",
    "release:major": "./scripts/release.sh major",
    "release:minor": "./scripts/release.sh minor",
    "release:patch": "./scripts/release.sh patch",
    "release:prerelease": "./scripts/release.sh prerelease",
    "test": "npm run lint:stylelint"
  },
  "devDependencies": {
    "lerna": "^8.0.1",
    "jsonlint": "^1.6.3"
  }
}
